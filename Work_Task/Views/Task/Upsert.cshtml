@model Tasking_CRUD.Models.TaskModel

<br />
<center>
<p style="font-family:Cambria; color:black; font-size:15px" >@(Model.Id != 0 ? "Edit" : "Create New") Task</p>

<form method="post" id="upsertTask" style="font-family:Cambria; color:black; font-size:12px">
    @if (Model.Id != 0)
    {
<input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DateCreated" />
                                <input type="hidden" asp-for="State" />}
    <label asp-for="Name"></label><br />
    <input name="taskName" /><br />
    <label asp-for="TaskDescription"></label><br />
    <textarea name="taskDescription" form="upsertTask"></textarea><br />

    <button type="submit">@(Model.Id != 0 ? "Edit" : "Create")</button><br />
    <a asp-action="Index">Back To Tasks</a>
</form>
 </center>





