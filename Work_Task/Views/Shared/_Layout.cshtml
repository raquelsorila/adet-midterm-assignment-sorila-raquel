<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment 1 - 3</title>
    <link rel="stylesheet" href="~/css/bootstrap-blue.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-image: linear-gradient(#ffffff, #000000);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
               
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:Times New Roman; color:black; font-size:20px; font-weight:bold;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Index" style="font-family:Times New Roman; color:black; font-size:20px; font-weight:bold;">Tasks</a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container" style="background-color: black; color:white; font-weight:bold; font-family:Times New Roman; font-size:12px;">
            &copy; 2020 - BSIT31E1 | SORILA, RAQUEL A.| ASSIGNMENT 1 - 3 
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/task.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
